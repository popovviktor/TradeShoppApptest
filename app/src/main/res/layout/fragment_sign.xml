<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SignFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="@string/singinWithApple"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.83" />

        <TextView
            android:id="@+id/btn_Log_IN"
            android:layout_width="35dp"
            android:layout_height="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/login"
            android:textColor="#254FE6"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="289dp"
            android:layout_height="29dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="0dp"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.48000002"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editLastNAme"
            android:layout_width="289dp"
            android:layout_height="29dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:hint="Last name"
            android:inputType="textPersonName"
            android:padding="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39999998"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-medium"
            android:foregroundGravity="center|center_horizontal"
            android:gravity="center|top"
            android:text="Sign in"
            android:textColor="#161826"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />

        <EditText
            android:id="@+id/editFirstName"
            android:layout_width="289dp"
            android:layout_height="29dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:hint="First name"
            android:inputType="textPersonName"
            android:padding="0dp"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_SignIN"
            android:layout_width="289dp"
            android:layout_height="46dp"
            android:backgroundTint="#4E55D7"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/btn_sign_in"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.59000003"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/bottontextbtn"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btn_SignIN"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.64" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="23.83dp"
            android:layout_height="24.22dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/img"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="@string/singinWithGoogle"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="18.38dp"
            android:layout_height="21.86dp"
            android:src="@drawable/img_1"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/textView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>