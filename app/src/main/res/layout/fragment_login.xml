<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/bottontextbtn2"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <TextView
            android:id="@+id/btn_Sign_IN2"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/signin"
            android:textColor="#254FE6"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView14"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toTopOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="199dp"
            android:layout_height="44dp"
            android:fontFamily="sans-serif-medium"
            android:foregroundGravity="center|center_horizontal"
            android:gravity="center|top"
            android:text="@string/welcomeback"
            android:textColor="#161826"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />

        <EditText
            android:id="@+id/editEmaillogin"
            android:layout_width="289dp"
            android:layout_height="29dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:hint="Email       "
            android:inputType="textPersonName"
            android:padding="0dp"
            android:textColorHint="#777171"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32"
            tools:ignore="TouchTargetSizeCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="289dp"
            android:layout_height="29dp"
            android:gravity="center"
            android:hint="Password"
            app:hintEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39"
            app:passwordToggleEnabled="true"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/editPasswordLogin"
                android:layout_width="289dp"
                android:layout_height="29dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="62dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPersonName"
                android:padding="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColorHint="#857E7E"
                android:textSize="11sp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/button2"
            android:layout_width="289dp"
            android:layout_height="46dp"
            android:backgroundTint="#4E55D7"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/login"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.59000003"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>